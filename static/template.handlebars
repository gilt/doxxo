<!DOCTYPE html>
<html lang="en">
<head>
  <title>{{file.path}}</title>

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0">
  <meta name="doxxo-relative-root" content="{{relativeRoot}}">
  <meta name="doxxo-github-url" content="https://github.com/gilt/doxxo">

  <link rel="stylesheet" type="text/css" media="all" href="{{css.style}}">
  <link rel="stylesheet" type="text/css" media="all" href="{{css.syntax}}">

  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="{{behavior}}"></script>
</head>

<body>
  <section id="meta">
    <div class="file-path">
      <a href="{{file.url}}">{{file.path}}</a>
    </div>
  </section>
  <section id="document">

  {{#each blocks}}
    <a name="section-{{@index}}"></a>
    <article class="segment">
      <a class="pilcrow" href="#section-{{@index}}">&#182;</a>
      <div class="comments{{#if docSection}} doc-section{{/if}}{{#if isPrivate}} doc-section-private{{/if}}">
        <div class="wrapper">
        {{#if ctx}}
          <p><span class="doc-section-header">{{#scope}}{{.}}{{/scope}}{{#if isConstructor}} constructor{{/if}} {{type}} {{ctx.name}}</span></p>
        {{/if}}

        {{#if module}}
          <p><span class="doc-section-header">Module {{module}}</span></p>
        {{/if}}

        {{#if description.full}}
          <p><span class="desc">{{description.full}}</span></p>
        {{/if}}

        {{#if notes}}
          <p>Notes:</p>
          {{#each notes}}
          {{{.}}}
          {{/each}}
        {{/if}}

        {{#if howto}}
          <p>How-To:</p>
          {{{howto}}}
        {{/if}}

        {{#if parameters}}
          <p>Parameters:</p>
          <ul>
            {{#each parameters}}
            <li>
              <strong>{{name}}</strong>{{#if type}} must be of type <strong>{{type}}</strong>.{{/if}}
              {{#if description}}<br>({{description}}){{/if}}
            </li>
            {{/each}}
          </ul>
        {{/if}}

        {{#if returns}}
          <p>
            <strong>Returns a {{returns.type}}</strong>
            {{#if returns.description}}<br>({{returns.description}}){{/if}}
          </p>
        {{/if}}

        {{#if examples}}
          <p>Examples:</p>
          {{#each examples}}
          <pre>
<code>
{{.}}
</code>
          </pre>
          {{/each}}
        {{/if}}
        </div>
      </div>
      <div class="code">
        <div class="wrapper">
          <pre class="hljs">
{{{code}}}
          </pre>
        </div>
      </div>
    </article>
  {{/each}}

  </section>

</body>
</html>